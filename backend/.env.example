# Copy this file to .env and fill the values before running the backend

# MongoDB connection URI
MONGO_URI=mongodb://localhost:27017/techlines

# JSON Web Token secret
TOKEN_SECRET=your_jwt_secret_here

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STANDARD_SHIPPING_ID=price_xxx
EXPRESS_SHIPPING_ID=price_xxx

# Email (for nodemailer)
EMAIL_USER=youremail@gmail.com
EMAIL_PASS=your_email_password_or_app_password

# Google client id (used by frontend auth)
GOOGLE_CLIENT_ID=your_google_client_id

# Port (optional)
PORT=5001

# NODE_ENV=production
